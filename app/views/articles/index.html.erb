
<ul>
  <% @articles.each do |article| %>
    <li id='<%= article.id %>'>
      <h2>
        <%= link_to article.title, article_path(article) %>
      </h2>
      <section><%= truncate(article.description, length: 200, separator: ' ') %> </section>
     </li>
  <% end %>
</ul>


